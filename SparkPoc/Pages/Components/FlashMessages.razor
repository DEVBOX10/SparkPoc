@code {
    [CascadingParameter]
    public HttpContext Context { get; set; }
}
@if (Context.HasKey("success"))
{
    <div class="my-6 p-6 bg-green-100 font-medium text-green-700 border border-green-700 rounded max-w-3xl">
        @Context.GetFlash("success")
    </div>
}
@if (Context.HasKey("info"))
{
    <div class="my-6 p-6 bg-blue-100 font-medium text-blue-700 border border-blue-700 rounded max-w-3xl">
        @Context.GetFlash("info")
    </div>
}
@if (Context.HasKey("warning"))
{
    <div class="my-6 p-6 bg-yellow-100 font-medium text-yellow-700 border border-yellow-700 rounded max-w-3xl">
        @Context.GetFlash("warning")
    </div>
}
@if (Context.HasKey("error"))
{
    <div class="my-6 p-6 bg-red-100 font-medium text-red-700 border border-red-700 rounded max-w-3xl">
        @Context.GetFlash("error")
    </div>
}